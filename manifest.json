{
    "manifest_version": 2,
    "name": "One-Click Email Cleaner",
    "version": "1.0",
    "description": "Filter and delete junk, spam, and subscription emails with one click",
    "permissions": [
      "activeTab",
      "https://mail.google.com/*"
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["https://mail.google.com/*"],
        "js": ["content.js"]
      }
    ]
  }